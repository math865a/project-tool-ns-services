{
    "name": "project-tool-service",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "license": "UNLICENSED",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug 0.0.0.0:9230 --watch",
        "start:prod": "node dist/apps/project-tool-service/main",
        "gateway:prod": "node dist/apps/gateway/main",
        "monitoring:prod": "node dist/apps/monitoring/main",
        "organization:prod": "node dist/apps/organization/main",
        "project-management:prod": "node dist/apps/project-management/main",
        "resource-capacity:prod": "node dist/apps/resource-capacity/main",
        "resource-management:prod": "node dist/apps/resource-management/main",
        "resource-scheduling:prod": "node dist/apps/resource-scheduling/main",
        "security:prod": "node dist/apps/security/main",
        "user-service:prod": "node dist/apps/user-service/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./apps/project-tool-service/test/jest-e2e.json",
        "typecheck": "tsc --noEmit"
        
    },
    "dependencies": {
        "@casl/ability": "^6.3.3",
        "@nestjs/common": "^9.3.12",
        "@nestjs/config": "^2.3.1",
        "@nestjs/core": "^9.3.12",
        "@nestjs/cqrs": "^9.0.3",
        "@nestjs/jwt": "^10.0.3",
        "@nestjs/mapped-types": "^1.2.2",
        "@nestjs/microservices": "^9.3.12",
        "@nestjs/passport": "^9.0.3",
        "@nestjs/platform-express": "^9.3.12",
        "@nestjs/platform-socket.io": "^9.3.12",
        "@nestjs/websockets": "^9.3.12",
        "@sendgrid/mail": "^7.7.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.13.2",
        "compression": "^1.7.4",
        "ioredis": "^5.3.1",
        "lodash": "^4.17.21",
        "luxon": "^3.3.0",
        "mongodb": "^5.2.0",
        "nats": "^2.13.1",
        "neo4j-driver": "^5.6.0",
        "passport": "^0.6.0",
        "passport-jwt": "^4.0.1",
        "passport-local": "^1.0.0",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.0",
        "socket.io": "^4.6.1"
    },
    "devDependencies": {
        "rimraf": "^4.4.1",
        "@nestjs/cli": "^9.3.0",
        "@nestjs/schematics": "^9.1.0",
        "@nestjs/testing": "^9.3.12",
        "@types/compression": "^1.7.2",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.0",
        "@types/lodash": "^4.14.192",
        "@types/luxon": "^3.2.0",
        "@types/node": "^18.15.11",
        "@types/passport-jwt": "^3.0.8",
        "@types/supertest": "^2.0.12",
        "@types/voca": "^1.4.2",
        "@typescript-eslint/eslint-plugin": "5.48.2",
        "@typescript-eslint/parser": "5.48.2",
        "eslint": "8.32.0",
        "eslint-config-prettier": "^8.8.0",
        "jest": "^29.5.0",
        "nodemon": "^2.0.22",
        "ts-jest": "^29.0.5",
        "ts-loader": "^9.4.2",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^4.9.5"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "./coverage",
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/libs/",
            "<rootDir>/apps/"
        ],
        "moduleNameMapper": {
            "^@ns/neo4j(|/.*)$": "<rootDir>/libs/neo4j/src/$1",
            "^@ns/cqrs(|/.*)$": "<rootDir>/libs/cqrs/src/$1",
            "^@ns/middleware(|/.*)$": "<rootDir>/libs/middleware/src/$1",
            "^@ns/redis(|/.*)$": "<rootDir>/libs/redis/src/$1",
            "^@ns/util(|/.*)$": "<rootDir>/libs/util/src/$1",
            "^@ns/nats(|/.*)$": "<rootDir>/libs/nats/src/$1",
            "^@ns/endpoints(|/.*)$": "<rootDir>/libs/endpoints/src/$1",
            "^@ns/decorators(|/.*)$": "<rootDir>/libs/decorators/src/$1",
            "^@ns/guards(|/.*)$": "<rootDir>/libs/guards/src/$1",
            "^@ns/session(|/.*)$": "<rootDir>/libs/session/src/$1",
            "^@ns/events(|/.*)$": "<rootDir>/libs/events/src/$1",
            "^@ns/dto(|/.*)$": "<rootDir>/libs/dto/src/$1",
            "^@ns/definitions(|/.*)$": "<rootDir>/libs/definitions/src/$1",
            "^@ns/mongodb(|/.*)$": "<rootDir>/libs/mongodb/src/$1",
            "^@ns/service-deps(|/.*)$": "<rootDir>/libs/service-deps/src/$1"
        }
    },
    "prettier": {
        "tabWidth": 4,
        "tabs": true,
        "semicolons": true,
        "arrowParens": "always"
    }
}
